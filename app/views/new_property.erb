<div class="container">
  <h1>Create new property</h1>
  <p><%= @error %></p>


  <form name="new_property" method="post">
    <table>
      <tr>
        <td width="70px">Title:</td>
        <td>
          <input type="text" name="title" autofocus>
        </td>
      </tr>
      <tr>
        <td width="70px">Description:</td>
        <td>
          <textarea name="description" rows="10"></textarea>
        </td>
      </tr>
      <tr>
        <td width="70px">Price:</td>
        <td>
          <input type="text" name="price">
        </td>
      </tr>
      <tr>
        <td width="70px">No. of beds:</td>
        <td>
          <input type="text" name="bed">
        </td>
      </tr>
      <tr>
        <td width="70px">No. of bathrooms:</td>
        <td>
          <input type="text" name="bathroom">
        </td>
      </tr>
      <tr>
        <td width="70px">Tags:</td>
        <td>
          Enter some tags, saperated by commas<br>
          <input type="text" name="tags">
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <input type="submit" value="Create" class="button">
        </td>
      </tr>
    </table>
  </form>
</div>
