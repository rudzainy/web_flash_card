<div class="container">
  <h1>View property</h1>
  <p><%= @flag %></p>

  <table>
    <tr>
      <th><%= @property.title %><div align="right">RM<%= @property.price %></div></th>
    </tr>
    <tr>
      <td><%= @property.description %></td>
    </tr>
    <tr>
      <td>Beds: <%= @property.bed %>&nbsp;&nbsp;&nbsp;&nbsp;Bathrooms: <%= @property.bathroom %></td>
    </tr>
    <tr>
      <td>
        Tags: <% @property.tags.each do |tag| %>
        <%= tag.name %>&nbsp;
        <% end %>
      </td>
    </tr>
    <tr>
      <td align="right">
        <% if @property.user_id == session[:user_id] %>
        <a href="/edit_property/<%= @property.id %>"><button>Edit</button></a>
        <% end %>
        <% if @property.user_id != session[:user_id] %>
        <a href="../../book_property/<%= @property.id %>"><button>Book Now</button></a>
        <% end %>
        <a href="../../"><button>Main Page</button></a>
      </td>
    </tr>
  </table>
</div>
