<div class="container">
  <h1>Edit post</h1>
  <p><%= @flag %></p>

  <form name="edit_post" method="post">
    <table>
      <tr>
        <td width="70px">Author:</td>
        <td>
          <input type="text" name="author" value="<%= @post.author %>"autofocus>
        </td>
      </tr>
      <tr>
        <td width="70px">Title:</td>
        <td>
          <input type="text" name="title" value="<%= @post.title %>">
        </td>
      </tr>
      <tr>
        <td width="70px">Contents:</td>
        <td>
          <textarea name="content" rows="10"><%= @post.content %></textarea>
        </td>
      </tr>
      <tr>
        <td width="70px">Tags:</td>
        <td>
          Enter some tags, saperated by commas<br>
          <input type="text" name="tags" value="<% @post.tags.each do |tag| %><%= tag.name %>, <% end %>">
        </td>
      </tr>
    </table>
    <input type="submit" value="Edit post" class="button">
  </form><br>
  <a href="/delete_post/<%= @post.id %>"><button>Delete post</button></a>
  <a href="../../"><button>Main Page</button></a>
</div>
